pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    try {

                        sh 'docker-compose build'
                    } catch(e) {
                        currentBuild.result = "FAILURE"
                    } finally {

                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script{
                    try {

                        sh 'docker-compose up -d'
                    } catch(e) {
                        currentBuild.result = "FAILURE"
                    } finally {

                    }
                }
            }
        }
    }
}